<% title "Organisms" %>

<table>
  <tr>
    <th>Sampling</th>
    <th>Sampling Type</th>
    <th>Taxon</th>
    <th>Count</th>
    <th>Size</th>
    <th>Images</th>
    <th>Notes</th>
  </tr>
  <% for organism in @organisms %>
    <tr>
      <td><%=h organism.sampling.site.lake.name %><br/><%=h organism.sampling.site.name %><br/><%=h organism.sampling.date %><br/></td>
      <td><%=h organism.sampling_type %></td>
      <td><%=h organism.taxon.common_name %><br/>(<%=h organism.taxon.scientific_name %>)</td>
      <td><%=h organism.count %></td>
      <td><%=h organism.size %></td>
      <td><%= image_tag organism.image.url, :size => "40x40" %><%= image_tag organism.image2.url, :size => "40x40" %><%= image_tag organism.image3.url, :size => "40x40" %></td>
      <td><%=h organism.notes %></td>
      <td><%= link_to "Show", organism %></td>
      <td><%= link_to "Edit", edit_organism_path(organism) %></td>
      <td><%= link_to "Destroy", organism, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Organism", new_organism_path %></p>
