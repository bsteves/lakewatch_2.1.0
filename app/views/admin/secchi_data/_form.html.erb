<% sampling_methods3 = Array.new %>
<% if @secchi_datum.sampling.secchi %>
<% sampling_methods3.push('Secchi') %>
<% end %>


<% form_for([:admin, @secchi_datum]) do |f| %>
<% if logged_in? %>
  <%= f.hidden_field :user_id, :value => current_user.id %>
<% end %>
  <%= f.error_messages %>
<table id="main_table" border="0" cellpadding="0" cellspacing="0" class="pretty">
<thead>
  <tr>
    <th>Observer</th>
    <th>Secchi Time (hh:mm)</th>
    <th>Secchi Depth (m)</th>
    <th>Sample Quality?<br/>
    <th>Wave Code</th>
    <th>Sky Code</th>
    <th colspan="3"/>
  </tr>
</thead>
<tbody> 
<tr> 
    <%= f.hidden_field :sampling_id %>
  <td>
    <%= f.text_field :observer , :size=>"15"%>
  </td>
   <td>
    <%= f.time_select :secchi_time, :size=>"15" %>
  </td>
 <td>
    <%= f.text_field :secchi_depth, :size=>"4" %>
  </td>
  <td>
   View Tube Used? <%= f.check_box :view_type %><br/>
   Plants Visible? <%= f.check_box :plants %><br/>
       Hit Bottom? <%= f.check_box :hit_bottom %>
  </td>
 
<td>
    <%= f.select :wave_code, [["1 - calm","1"],["2 - ripples","2"],["3 - waves","3"],["4 - whitcaps","4"]], :prompt => 'Select One'%>
  </td>
  <td>
   
    <%= f.select :sky_code, [["1 - clear","1"],["2 - partly cloudy","2"],["3 - cloudy","3"],["4 - precipitation","4"]], :prompt => 'Select One'%>
  </td>

  <td colspan="3"><%= f.submit "submit" %></td>
</tr>
</tbody>
</table>
<% end %>

