<h1>AIS Monitoring</h1>

<table>
  <tr>
    <th>Sampling</th>
    <th>Sampling Type</th>
    <th>Taxon</th>
    <th>Abundance Code</th>
    <th>Confidence Code</th>
    <th>Images</th>
    <th>Notes</th>
  </tr>
  <% for organism in @organisms %>
    <tr>
      <td><%= link_to h(organism.sampling.site.lake.name), [:admin, organism.sampling.site.lake] %><br/><%= link_to h(organism.sampling.site.name), [:admin, organism.sampling.site] %><br/><%=link_to h(organism.sampling.date), [:admin, organism.sampling] %><br/></td>
      <td><%=h organism.sampling_type %></td>
      <td><%= link_to (organism.taxon.common_name + "<br/>(<i>" + organism.taxon.scientific_name + "</i>)"), [:admin, organism.taxon] %></td>
      <td><%=h organism.count %></td>
      <td><%=h organism.confidence %></td>
      <td><%= image_tag organism.image.url, :size => "40x40" %><%= image_tag organism.image2.url, :size => "40x40" %><%= image_tag organism.image3.url, :size => "40x40" %></td>
      <td><%=h organism.notes %></td>
      <td><%= link_to "Show", [:admin, organism] %></td>
      <td><%= link_to "Edit", edit_admin_organism_path(organism) %></td>
      <td><%= link_to "Delete", organism, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

