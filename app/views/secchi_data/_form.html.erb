<% sampling_methods3 = Array.new %>
<% if @secchi_datum.sampling.secchi %>
<% sampling_methods3.push('Secchi') %>
<% end %>


<% form_for @secchi_datum do |f| %>
<% if logged_in? %>
  <%= f.hidden_field :user_id, :value => current_user.id %>
<% end %>
  <%= f.error_messages %>
<table id="main_table" border="0" cellpadding="0" cellspacing="0" class="pretty">
<thead>
  <tr>
    <th>Sampling Type</th>
    <th>Observer</th>
    <th>Secchi Time</th>
    <th>Secchi Depth (m)</th>
    <th>View Tube Used?</th>
    <th>Plants Visible?</th>
    <th>Wave Code</th>
    <th>Sky Code</th>
    <th colspan="3"/>
  </tr>
</thead>
<tbody> 
<tr> 
 <td>
    <%= f.hidden_field :sampling_id %>
<%=  sampling_methods3  %>
  </td>
  <td>
    <%= f.text_field :observer , :size=>"15"%>
  </td>
   <td>
    <%= f.text_field :secchi_time %>
  </td>
 <td>
    <%= f.text_field :secchi_depth, :size=>"4" %>
  </td>
  <td>
    <%= f.text_field :view_type %>
  </td>
   <td>
    <%= f.text_field :plants %>
  </td>
 <td>
    <%= f.text_field :wave_code %>
  </td>
  <td>
    <%= f.text_field :sky_code %>
  </td>

  <td colspan="3"><%= f.submit "submit" %></td>
</tr>
</tbody>
</table>
<% end %>

