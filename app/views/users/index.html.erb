<% title "User" %>
<table id="main_table" border="0" cellpadding="0" cellspacing="0" class="pretty">
<thead>
  <tr>
    <th>User ID</th>
    <th>Username</th>
    <th>Email</th>
    <th>Lake1</th>
    <th>Lake2</th>
    <th>Lake3</th>
    <th>Lake4</th>
    <th>Lake5</th>
  </tr>
</thead>
<tbody>
  <% for user in @users %>
    <tr>
      <td><%=h user.id %></td>
      <td><%=h user.username %></td>
      <td><%=h user.email %></td>
      <td>
      <% unless user.lake1.nil? %>
      <%=link_to h(Lake.find(user.lake1).lake_county), Lake.find(user.lake1) %>
      <% end %>
      </td><td>
      <% unless user.lake2.nil? %>
      <%=link_to h(Lake.find(user.lake2).lake_county), Lake.find(user.lake2) %>
      <% end %>
      </td><td>
      <% unless user.lake3.nil? %>
      <%=link_to h(Lake.find(user.lake3).lake_county), Lake.find(user.lake3) %>
      <% end %>
      </td><td>
      <% unless user.lake4.nil? %>
      <%=link_to h(Lake.find(user.lake4).lake_county), Lake.find(user.lake4) %>
      <% end %>
      </td><td>
      <% unless user.lake5.nil? %>
      <%=link_to h(Lake.find(user.lake5).lake_county), Lake.find(user.lake5) %>
      <% end %>
      </td>
      <td><%= link_to "Edit", edit_user_path(user) %></td>
      <td><%= link_to "Delete", user, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</tbody>
</table>

<p><%= link_to "New User", new_user_path %></p>
